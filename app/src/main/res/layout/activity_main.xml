<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.acer.myapp_p.MainActivity">

    <Button
        android:id="@+id/toselect"
        android:layout_width="340dp"
        android:layout_height="60dp"
        android:layout_marginTop="70dp"
        android:onClick="onView"
        android:text="進入管理頁面"
        android:textSize="25dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="16dp" />

    <Button
        android:id="@+id/toLogin"
        android:layout_width="340dp"
        android:layout_height="60dp"
        android:layout_marginTop="44dp"
        android:onClick="onLogin"
        android:text="管理頁面登入"
        android:textSize="25dp"
        app:layout_constraintTop_toBottomOf="@+id/toselect"
        tools:layout_editor_absoluteX="16dp" />

    <Button
        android:id="@+id/toabout"
        android:layout_width="340dp"
        android:layout_height="60dp"
        android:layout_marginTop="44dp"
        android:text="關於我們"
        android:textSize="25dp"
        app:layout_constraintTop_toBottomOf="@+id/toLogin"
        tools:layout_editor_absoluteX="16dp" />

</android.support.constraint.ConstraintLayout>
