<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.acer.myapp_p.selectActivity">

    <Button
        android:id="@+id/btn_search"
        android:layout_width="340dp"
        android:layout_height="60dp"
        android:layout_marginTop="32dp"
        android:text="清單查詢"
        android:textSize="25dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_re"
        tools:layout_editor_absoluteX="16dp" />

    <Button
        android:id="@+id/btn_his"
        android:layout_width="340dp"
        android:layout_height="60dp"
        android:layout_marginTop="32dp"
        android:text="資料更新紀錄"
        android:textSize="25dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_search"
        tools:layout_editor_absoluteX="16dp" />

    <Button
        android:id="@+id/btn_do"
        android:layout_width="340dp"
        android:layout_height="60dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="28dp"
        android:text="清單製作"
        android:textSize="25dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_re"
        android:layout_width="340dp"
        android:layout_height="60dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="32dp"
        android:text="清單修改"
        android:textSize="25dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_do" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_marginLeft="148dp"
        android:layout_marginTop="32dp"
        android:text="返回"
        android:textSize="25dp"
        android:onClick="onBack"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_his" />

</android.support.constraint.ConstraintLayout>
